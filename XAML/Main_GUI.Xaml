<mah:MetroWindow 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        Title="ToolBox"
        Width="500"
        Height="450"
        ResizeMode="NoResize"
        >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- MahApps.Metro resource dictionaries. Make sure that all file names are Case Sensitive! -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <!-- Theme setting -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Dark.Blue.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button/>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="Button_1" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="0,5,0,0" Height="25" Width="100">
            <iconPacks:PackIconBootstrapIcons Kind="AlarmFill" Foreground="Red" Height="10" />
        </Button>
        <Button Name="Button_2" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="0,35,0,0" Content="Button2" Height="25" Width="100"/>
        <Button Name="Button_3" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="0,65,0,0" Content="Button3" Height="25" Width="100"/>
        <Button Name="Button_4" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="0,95,0,0" Content="Button4" Height="25" Width="100"/>
        <Button Name="Button_5" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="0,35,0,0" Content="Button5" Height="25" Width="100"/>


    </Grid>
</mah:MetroWindow >
